@model BookFriends.ViewModels.BrowseCommunitiesViewModel

@{
    ViewData["Title"] = "Communities";
}

<div class="container">
    <h3>Browse Communities</h3>
    <input type="text" class="form-control" placeholder="Find a community.." aria-label="Find a community" aria-describedby="search-communities"/>
    <ul>
        @foreach (var communityGroup in Model.Communities)
        {
            <li class="row mt-3 mb-3">
                <div class="col-2 text-center">
                    <img class="img-thumbnail bf-thumb" src="" />
                </div>
                <div class="col-10">
                    <a asp-controller="Community" asp-action="View" asp-route-id="@communityGroup.Id">
                        <h5>@communityGroup.Name</h5>
                    </a>
                    <span class="badge badge-info">@communityGroup.GetMemberCount() members</span>
                    <p>@communityGroup.Description</p>
                </div>
            </li>
        }
    </ul>
</div>
<div class="container text-center">
    <button class="btn btn-success btn-sm">View More</button>
</div>